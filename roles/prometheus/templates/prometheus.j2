global:
  scrape_interval:     15s # Set the scrape interval to every 15 seconds. Default is every 1 minute.
  evaluation_interval: 15s # Evaluate rules every 15 seconds. The default is every 1 minute.
# Alertmanager configuration


alerting:
  alertmanagers:
    - static_configs:
    - targets:
       - "{{ groups['alertmanager'] | map('extract', hostvars, ['ansible_eth0', 'ipv4', 'address']):{{ alertmanager_port }}"


#ALert rules files

rule_files:
  - "{{ prometheus_install_dir }}/alert-rules.yml"



scrape_configs:

#Adding prometheus exporters
  - job_name: 'prometheus'
    static_configs:
    - targets: ['localhost:{{ prometheus_port }}']


# adding node_exporter exporters
  - job_name: 'Linux-Nodes'
    static_configs:
    - targets: ["{{ groups['node_exporter'] | map('extract', hostvars, ['ansible_eth0', 'ipv4', 'address']) | join(':9100,') }}"]



# Adding Cadvisor exporters
  - job_name: 'cadvisor'
    static_configs:
    - targets: ["{{ groups['cadvisor'] | map('extract', hostvars, ['ansible_eth0', 'ipv4', 'address']) | join(':8080,') }}"]



#Adding alertmanager exporters
  - job_name: 'Alertmanager'
    static_configs:
    - targets: ["{{ groups['client-nodes'] | map('extract', hostvars, ['ansible_eth0', 'ipv4', 'address']) | join(':9093,') }}"]
